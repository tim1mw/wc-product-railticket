<h2>Discount Types</h2>
<table border='1' class='railticket_admintable'>
    <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Base fare</th>
        <th>Custom<br>Travellers</th>
        <th>Trip Type</th>
        <th>Actions</th>
    </tr>
    {{#discounttypes}}
