        <td>{{shortname}}</td>
        <td>{{name}}</td>
        <td style='text-align:center;'>{{basefarefmt}}</td>
        <td style='text-align:center;'>{{customtypefmt}}</td>
        <td style='text-align:center;'>{{triptypefmt}}</td>
        <td style='text-align:center;'>
            <a href=''>Edit</a>
        </td>
    </tr>
    {{/discounttypes}}
</table>
