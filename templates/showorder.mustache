<div class='railticket_editdate'>
    <table border='1' style='border-collapse:collapse;background:#ffffff;'>
    {{# details }}
        <tr><th>{{item}}</th><td class='railticket_meta'>{{{value}}}</td></tr>
    {{/ details }}
    </table>

    {{# bookings }}
        <h2>{{title}}</h2>
        <table border='1' style='border-collapse:collapse;background:#ffffff;'>
            <tr><th>{{tripstr}}</th><td class='railticket_meta'>{{stns}}</td></tr>
            <tr><th>{{timestr}}</th><td class='railticket_meta'>{{deptime}}</td></tr>
            <tr><th>{{baystr}}</th><td class='railticket_meta'>{{bays}}</td></tr>
            <tr><th>{{collectedstr}}</th><td class='railticket_meta'>{{collected}}</td></tr>
        </table>
        <p><form action='{{actionurl}}' method='post'>
            <input type='hidden' name='action' value='{{action}}' />
            <input type='hidden' name='orderid' value='{{orderid}}' />
            <input type='hidden' name='bookingid' value='{{bookingid}}' />
            <input type='submit' value='{{actionstr}}' />
        </form></p>
    {{/ bookings }}

    <br /><br />

    {{# bookings }}
    <p>{{> depbutton }}</p>
    {{/ bookings }}
    <p>{{> back_to_services }}</p>
    {{{extrabuttons}}}
</div>
